<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="3.1"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <display-name>CookBook</display-name>

    <!-- Recipe List -->
    <servlet>
        <servlet-name>RecipeListServlet</servlet-name>
        <servlet-class>com.cookbook.servlet.RecipeListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeListServlet</servlet-name>
        <url-pattern>/recipes</url-pattern>
    </servlet-mapping>

    <!-- Recipe Details -->
    <servlet>
        <servlet-name>RecipeDetailServlet</servlet-name>
        <servlet-class>com.cookbook.servlet.RecipeDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RecipeDetailServlet</servlet-name>
        <url-pattern>/recipe</url-pattern>
    </servlet-mapping>

    <!-- Add Recipe -->
    <servlet>
        <servlet-name>AddRecipeServlet</servlet-name>
        <servlet-class>com.cookbook.servlet.AddRecipeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRecipeServlet</servlet-name>
        <url-pattern>/addRecipe</url-pattern>
    </servlet-mapping>

    <!-- Search -->
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>com.cookbook.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <!-- Welcome -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
